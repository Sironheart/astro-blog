---
import Header from "../components/Header.astro";
import "../styles/base.css";

interface Props {
  pageTitle: string;
  centerTitle?: boolean;
}
const { pageTitle, centerTitle = true } = Astro.props;
---

<html>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle ?? "Website"}</title>
  </head>
  <body class="bg-base-black text-base-paper">
    <Header />
    <div class="container mx-auto m-4">
      <h1 class:list={{ "py-4": true, "text-center": centerTitle }}>
        {pageTitle}
      </h1>
      <slot />
    </div>
  </body>
</html>
