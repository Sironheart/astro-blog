---
interface Props {
  title: string;
  description: string;
  pageUrl: string;
  imageUrl: string|undefined|null;
}
const { title, description, pageUrl, imageUrl } = Astro.props;
---

<div class="border border-gray-600 shadow-white my-4 rounded-s">
  <a href={pageUrl}>
    {
      !!imageUrl ? (
        <img
          src={imageUrl}
          alt=""
          class="top-0 left-0 right-0 bottom-4 w-full h-auto"
        />
      ) : (
        ""
      )
    }
    <div class="m-4 text-pretty self-stretch">
      <h3 class="text-2xl">{title}</h3>
      <div class="text-xs">{description}</div>
    </div>
  </a>
</div>
